# .env.example
# Copy to .env and fill real secrets locally.
############################################################

# Flask / Core
FLASK_ENV=development
PORT=5001
FLASK_SECRET_KEY=replace_with_secure_random_hex

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=advdb
DB_USER=advuser
DB_PASSWORD=probe365

# Multi-tenancy
MULTI_TENANT=0
DEFAULT_TENANT_ID=public

# Metrics / Feature Flags
METRICS_ENABLED=1

# OpenAI / LLM (leave blank if not using)
OPENAI_API_KEY=CHAVE_AQUI
OPENAI_MODEL=gpt-4o-mini

# Vector Store
CHROMA_PERSIST_DIR=.chroma

# Logging
LOG_LEVEL=INFO

# Legacy internal host
INTERNAL_API_HOST=127.0.0.1

# Timezone
TZ=UTC

# Notes:
# 1. Never commit the populated .env to VCS.
# 2. Generate a secure FLASK_SECRET_KEY before deploying.
